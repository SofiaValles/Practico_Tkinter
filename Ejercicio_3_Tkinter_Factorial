#Ejercicio 1.3 â€“ Factorial.
from Tkinter import *

#ventana
ventana = Tk()
ventana.title("Factorial")
ventana.geometry("580x300")
#Color de ventana
ventana.configure(bg="#ebbec9")
#Ventana que se pueda agrandar 
ventana.resizable(True,True)

#marco
marco= LabelFrame(ventana, text="Calcular Factorial", bg="#ebd2be", font= ('Times New Roman',12,'italic','bold'))
marco.place(x=90, y= 60, width=400, height=200)

ventana.mainloop()
